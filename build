set -e

base="$(dirname "$0")"

fgn="$base/foreign"
bld="$base/bld"

bld="$(cd "$bld" && pwd)"
fgn="$(cd "$fgn" && pwd)"
tcn="gcc"

makecmd='make -j 5 -f gnu.mk bld="$bld" foreign="$fgn" toolchain="$tcn"'

if test "$1" = DBG
then
	makecmd+=' debug=1'
fi

# (cd "$base/src" \
# 	&& make -j 5 -f gnu.mk bld="$bld" foreign="$fgn" toolchain="$tcn")

(cd "$base/src" && eval "$makecmd")
