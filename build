set -e

base="$(dirname "$0")"

bld="$base/bld"
foreign="$base/foreign"
toolchain=gcc
debug=no
makejobs=5

while test "$1" != ''
do
	case "$1" in
	
	'-d') debug=yes;;
	'-b') shift; bld="$1";;
	'-t') shift; toolchain="$1";;
	'-j') shift; if test "$1" -gt 0; then makejobs="$1"; fi
	
	esac

	shift
done

test -d "$bld" || { echo "no build directory: $bld"; false; }
test -d "$bld" || echo "no foreign modules directory: $foreign"

case "$toolchain" in
gcc);;
gcc-nolto);;
clang);;
*) echo "toolchain should be one of: gcc gcc-nolto clang"; false
esac

bld="$(cd "$bld" && pwd)"
fgn="$(cd "$foreign" && pwd)"

makecmd="make -j $makejobs -f gnu.mk \
	bld='$bld' foreign='$fgn' toolchain='$toolchain'"

test "$debug" = yes && makecmd+=' debug=1'

# echo $makecmd

(cd "$base/src" && eval "$makecmd")
